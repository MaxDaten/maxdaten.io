{
  "permissions": {
    "allow": [
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(npm run check:*)",
      "Bash(npm run lint)",
      "Bash(npx playwright:*)",
      "WebFetch(domain:scottspence.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:cv.maxdaten.io)"
    ],
    "deny": []
  },
  "mcpServers": {
    "sveltekit": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://gitmcp.io/sveltejs/kit"
      ]
    },
    "sveltejs": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://gitmcp.io/sveltejs/svelte"
      ]
    },
    "generic-github-repo": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://gitmcp.io/docs"
      ]
    }
  }
}